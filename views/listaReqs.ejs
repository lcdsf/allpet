                                    <br>
                                    <label>E-mail:  <%= adm.email %></label>
                                    <br>
                                    <label>Data de cadastro:  <%= adm.data_cadastro.toLocaleString('pt-br') %></label>

                                   

                                </div>
                                <!-- <button>Ver detalhes</button> -->
                            </div>
                        </div>
            <% }) %>

        </div>

        <div id="btnsminhascompras">
            <a href="/admin"><button>Voltar</button></a>
