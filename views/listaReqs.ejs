<body>

    <%- include('./partials/header') %>
    
    <main> 

        <div id="bannercadastro">
            <h2>Lista de Requerimentos</h2>
        </div>

        <div id="painelminhascompras">

            <% administradores.forEach(adm => { %>

                        <div>
